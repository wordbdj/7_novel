<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.novel.content.mapper.ContentMapper">
 		<select id="selectContentListByUserIdNovelId" parameterType="map" resultType="com.novel.content.domain.Content">
 		SELECT
 			`id`
			,`userId`
			,`novelId`
			,`title`
			,`content`
			,`uploadTime`
			,`createdAt`
			,`updatedAt`
		FROM
			`content`
		WHERE
			`userId` = #{userId}
		AND
			`novelId` = #{novelId}
			<if test="direction == 'next'">
			<![CDATA[
			AND `id` < #{standardId}
			ORDER BY `id` DESC
			]]>
			</if>
			<if test="direction == 'prev'">
			<![CDATA[
			AND `id` > #{standardId}
			]]>
			</if>
			<if test="direction == null">
			ORDER BY `id` DESC
			</if>
		LIMIT ${limit}
 		</select>
 		
 	  	<select id="selectContentIdByUserIdAsSort" parameterType="map" resultType="int">
 		SELECT
 			`id`
 		FROM
 			`novel`
 		WHERE
 			`userId` = #{userId}
 		ORDER BY `id` ${sort}
 		LIMIT 1
 		</select>
 	
 		<select id="selectContentListByUserId" parameterType="map" resultType="com.novel.content.domain.Content">
 		SELECT
 			`id`
			,`userId`
			,`novelId`
			,`title`
			,`content`
			,`uploadTime`
			,`createdAt`
			,`updatedAt`
		FROM
			`content`
		WHERE
			`userId` = #{userId}
		AND
			`novelId` = #{novelId}
	 	</select>
	 	
	 	<select id="selectContentListByTitle" parameterType="String" resultType="com.novel.content.domain.Content">
	 		SELECT
	 			`id`
				,`userId`
				,`novelId`
				,`title`
				,`content`
				,`uploadTime`
				,`createdAt`
				,`updatedAt`
			FROM
				`content`
			WHERE
				`title` = #{title}
	 	</select>
	 	
	 	<insert id="insertContent" parameterType="map">
	 		INSERT INTO `content`
	 		(
				`userId`
				,`novelId`
				,`title`
				,`content`
				,`uploadTime`
				,`createdAt`
				,`updatedAt`
	 		)
	 		VALUES
	 		(
	 			#{userId}
	 			,#{novelId}
	 			,#{title}
	 			,#{content}
	 			,#{uploadTime}
	 			,NOW()
	 			,NOW()
	 		)
	 	</insert>
 </mapper>